<li class="list-group-item">
  <button class="btn btn-danger btn-sm delete-item-btn float-right" type="button"><i class="fas fa-trash"></i></button>
  <h3 class="text-center">Item <span><%= index + 1 %></span></h3>

  <input class="form-control" type="text" name="WishlistItems[<%= index %>][id]" value="<%= item.id %>" hidden>

  <div class="form-group">
    <label>Name</label>
    <input
      class="form-control"
      type="text"
      name="WishlistItems[<%= index %>][name]"
      data-error-ref="WishlistItems[<%= index %>].name"
      value="<%= item.name %>"
    >
    <div class="invalid-feedback"></div>
  </div>

  <div class="form-group">
    <label>Importance</label>
    <select
      class="custom-select"
      name="WishlistItems[<%= index %>][importance]"
      data-error-ref="WishlistItems[<%= index %>].importance"
      value="<%= item.importance %>"
    >
      <% for (let i = 0; i < 5; i++) { %>
        <option <%= item.importance == i + 1 ? 'selected' : '' %>><%= i + 1%></option>
      <% } %>
    </select>
    <div class="invalid-feedback"></div>
  </div>

  <div class="form-check">
    <input
      id="received-<%= index %>"
      class="form-check-input"
      type="checkbox"
      name="WishlistItems[<%= index %>][received]"
      data-error-ref="WishlistItems[<%= index %>].received"
      <%= item.received ? 'checked' : '' %>
    >
    <label class="form-check-label" for="received-<%= index %>">Received</label>
    <div class="invalid-feedback"></div>
  </div>
</li>
